<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ulearn.controllers.InitCont">
  <Label fx:id="title" layoutX="95.0" layoutY="40.0" nodeOrientation="LEFT_TO_RIGHT" text="uLearn Login"
         maxHeight="Infinity" maxWidth="Infinity">
    <font>
      <Font name="Corbel" size="20.0"/>
    </font>
  </Label>
  <Label fx:id="unameLabel" layoutX="33.0" layoutY="107.0" nodeOrientation="LEFT_TO_RIGHT" text="Username"
         maxHeight="Infinity" maxWidth="Infinity">
    <font>
      <Font name="Corbel" size="14.0"/>
    </font>
  </Label>
  <Label fx:id="pwdLabel" layoutX="35.0" layoutY="156.0" nodeOrientation="LEFT_TO_RIGHT" text="Password">
    <font>
      <Font name="Corbel" size="14.0"/>
    </font>
  </Label>
  <TextField fx:id="unameBox" layoutX="104.0" layoutY="103.0" nodeOrientation="LEFT_TO_RIGHT">
    <font>
      <Font name="Corbel" size="14.0"/>
    </font>
  </TextField>
  <PasswordField fx:id="pwdBox" layoutX="104.0" layoutY="152.0" nodeOrientation="LEFT_TO_RIGHT">
    <font>
      <Font name="Corbel" size="14.0"/>
    </font>
  </PasswordField>
  <Button fx:id="loginBtn" layoutX="152.0" layoutY="211.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT"
          onAction="#loginBtnAction" text="Sign In">
    <font>
      <Font name="Corbel" size="14.0"/>
    </font>
  </Button>
</Pane>
